<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_splash_text_padding"
        android:text="@string/app_name"
        android:textSize="@dimen/activity_splash_text_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/activity_splash_image_margin"
        android:contentDescription="@string/android_icon"
        android:src="@drawable/ic_android" />

</FrameLayout>